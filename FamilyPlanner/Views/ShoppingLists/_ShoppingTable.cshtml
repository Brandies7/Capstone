@model IEnumerable<FamilyPlanner.Models.ShoppingList>


<table class="table">
    <tr>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @if (!item.Buy)
                {
                    @Html.DisplayFor(modelItem => item.Item)
                }
                else
                {
                    <div class="CompletedToDo">@Html.DisplayFor(modelItem => item.Item)</div>
                }
            </td>

            <td>
                @Html.CheckBoxFor(modelItem => item.Buy, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/CustomScripts/CheckBoxListenerShop.js"></script>
