@model FamilyPlanner.Models.ShoppingList

@{
    ViewBag.Title = "Index";
}

<h2>Shopping List</h2>

<div id="tableDiv"></div>
<div id="todoCreateForm">
    @using (Ajax.BeginForm("AJAXCreate", "ShoppingLists", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        UpdateTargetId = "tableDiv"

    }))
    {
        <div class="form-group">
            @Html.AntiForgeryToken()

            <div>
                @Html.EditorFor(model => model.Item, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-default" value="Add" />
            </div>
        </div>

    }
</div>
@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/CustomScripts/BuildShoppingTable.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

}