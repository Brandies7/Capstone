@model IEnumerable<FamilyPlanner.Models.ToDoList>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MyToDoList)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        
        <tr>
            <td>
                @if (!item.Completed)
                {
                    @Html.DisplayFor(modelItem => item.MyToDoList)
                }
                else
                {
                    <div class="CompletedToDo">@Html.DisplayFor(modelItem => item.MyToDoList)</div>
                }
            </td>
                
            <td>
                @Html.CheckBoxFor(modelItem => item.Completed, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/CustomScripts/CheckBoxListener.js"></script>